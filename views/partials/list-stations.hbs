<div class="columns is-multiline">

  {{#each stations}}
    <div class="column is-one-quarter">
      <div class="box box-link-hover-shadow">
        <h2 class="title has-text-centered has-text-family-roboto station-title">
          {{title}}
        </h2>
        <div class="has-text-centered">
          <a href="/station/{{_id}}">
            {{>icons/open}}
          </a>
          <a href="/dashboard/deletestation/{{_id}}">
            {{>icons/delete}}
          </a>
        </div>
      </div>
    </div>
  {{/each}}
</div>

 <style>
  .station-title {
    font-size: 28px; 
  }
</style>

