<form class="box" action="/station/{{station._id}}/addreading" method="POST">
  <label for="code">Enter Reading Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="number" placeholder="Enter Code" name="code">
      </div>
      <div class="field">
        <input class="input" type="number" placeholder="Enter Temp" name="temp">
      </div>
      <div class="field">
        <input class="input" type="number" placeholder="Enter Wind Speed" name="windspeed">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Reading</button>
</form>